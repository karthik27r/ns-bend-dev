{
  "compilerOptions": {
    "target": "ES2016", // Specify ECMAScript target version
    "module": "CommonJS", // Specify module code generation
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files (main app)
    "strict": true, // Enable all strict type-checking options
    "declaration": true, // Generate corresponding '.d.ts' file for main app
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "resolveJsonModule": true // Include modules imported with .json extension
  },
  "include": ["src/**/*"], // Only include main app source for this config
  "exclude": ["node_modules", "**/*.spec.ts"] // Specifies the files to exclude
}
